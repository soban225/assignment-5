#include <iostream>
#include <vector>
#include <fstream>

using namespace std;

struct Employee {
    int id;
    string name;
    double monthlySalary;
};

int main() {
    vector<Employee> employees;
    int n;
    double limit;

    cout << "Enter number of employees: ";
    cin >> n;

    for (int i = 0; i < n; i++) {
        Employee e;

        cout << "\nEnter employee ID: ";
        cin >> e.id;

        cout << "Enter name: ";
        cin.ignore();
        getline(cin, e.name);

        cout << "Enter monthly salary: ";
        cin >> e.monthlySalary;

        employees.push_back(e);
    }

    cout << "\nEnter yearly salary limit: ";
    cin >> limit;

    ofstream fout("high_salary.txt");
    if (!fout) {
        cout << "File could not be opened." << endl;
        return 0;
    }

    for (int i = 0; i < employees.size(); i++) {
        double yearlySalary = employees[i].monthlySalary * 12;
        if (yearlySalary > limit) {
            fout << employees[i].id << " "
                 << employees[i].name << " "
                 << yearlySalary << endl;
        }
    }

    fout.close();

    ifstream fin("high_salary.txt");
    if (!fin) {
        cout << "File could not be opened." << endl;
        return 0;
    }

    int id;
    string name;
    double salary;

    cout << "\nEmployees with high yearly salary:\n";

    while (fin >> id >> name >> salary) {
        cout << "ID: " << id
             << " Name: " << name
             << " Yearly Salary: " << salary << endl;
    }

    fin.close();
    return 0;
}
